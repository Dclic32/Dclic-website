    <script>
        // Cr√©er des particules pour l'animation de l'en-t√™te
        const particlesContainer = document.getElementById('particles');
        const particleCount = 20;
        
        if (particlesContainer) {
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                
                // Taille al√©atoire
                const size = Math.random() * 10 + 5;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                
                // Position initiale al√©atoire
                const posX = Math.random() * 100;
                const posY = Math.random() * 100;
                particle.style.left = `${posX}%`;
                particle.style.top = `${posY}%`;
                
                // Dur√©e d'animation al√©atoire
                const duration = Math.random() * 15 + 10;
                particle.style.animationDuration = `${duration}s`;
                
                // D√©lai al√©atoire
                const delay = Math.random() * 10;
                particle.style.animationDelay = `${delay}s`;
                
                particlesContainer.appendChild(particle);
            }
        }
        
        // Animation des sections au d√©filement
        const sections = document.querySelectorAll('section');
        const backToTop = document.getElementById('backToTop');
        const navbar = document.querySelector('nav');
        const navItems = document.querySelectorAll('.nav-item');
        const navContainer = document.querySelector('.nav-container');
        
        let lastScrollTop = 0;
        
        function checkVisibility() {
            sections.forEach(section => {
                const rect = section.getBoundingClientRect();
                const windowHeight = window.innerHeight;
                
                if (rect.top < windowHeight * 0.8) {
                    section.classList.add('visible');
                }
            });
            
            // Afficher/masquer le bouton "Retour en haut"
            if (window.scrollY > 300) {
                backToTop.classList.add('visible');
            } else {
                backToTop.classList.remove('visible');
            }
            
            // G√©rer la barre de navigation
            const currentScrollTop = window.scrollY;
            
            if (currentScrollTop > 100) {
                // Compacter la navbar quand on scrolle
                navbar.classList.add('compact');
                navContainer.classList.add('compact');
                navItems.forEach(item => item.classList.add('compact'));
                
                // Masquer la navbar quand on scrolle vers le bas
                if (currentScrollTop > lastScrollTop && currentScrollTop > 300) {
                    navbar.classList.add('hidden');
                } else {
                    navbar.classList.remove('hidden');
                }
            } else {
                // Remettre la navbar normale quand on est en haut
                navbar.classList.remove('compact');
                navContainer.classList.remove('compact');
                navItems.forEach(item => item.classList.remove('compact'));
            }
            
            lastScrollTop = currentScrollTop;
        }
        
        // V√©rifier la visibilit√© au chargement
        window.addEventListener('load', checkVisibility);
        
        // V√©rifier la visibilit√© au d√©filement
        window.addEventListener('scroll', checkVisibility);
        
        // Navigation fluide
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                
                if (targetId === '#') {
                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                } else {
                    const target = document.querySelector(targetId);
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                }
            });
        });
        
        // Gestion des erreurs JavaScript
        window.addEventListener('error', function(e) {
            console.log('Erreur JavaScript:', e.error);
        });
    </script>
